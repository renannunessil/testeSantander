<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="Login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Login.Label">
        <item name="android:layout_marginTop">38dp</item>
    </style>

    <style name="Login.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/login_edittext_border</item>
        <item name="android:textColor">@color/loginDefaultComponentsColor</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Login.Button">
        <item name="android:background">@drawable/login_button_style</item>
        <item name="android:textColor">@color/loginFontColor</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Home.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/homeLabelsFontColor</item>
    </style>

    <style name="Home.AccountTextView">
        <item name="android:textColor">@color/accountInfoFontColor</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Home.AccountTextView.Label">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Home.TextView.LaunchItem">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Home.TextView.LaunchItem.Label">
        <item name="android:textColor">@color/launchLabelFontColor</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>
